{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es6"],

    /* Modules */
    "module": "commonjs",
    "rootDir": ".",
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "build",
    "declaration": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
